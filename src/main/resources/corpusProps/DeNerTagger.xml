<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties version="1.0">

	<!-- Tagger name -->
	<entry key="taggerName">DENER</entry>

	<!-- HERE ARE THE MAIN CORPUS BASED SETTINGS -->

	<!-- Corpus access parameters: Index of relevant tags in conll format -->
	<entry key="wordFormIndex">1</entry>
	<entry key="posTagIndex">4</entry>

	<!-- CORPUS parameters - labeled data -->
	<entry key="trainingLabeledSourceFiles">
		resources/data/ner/de/deu-train.src
	</entry>
	<entry key="devLabeledSourceFiles">
		resources/data/ner/de/deu-testa.src
	</entry>
	<entry key="testLabeledSourceFiles">
		resources/data/ner/de/deu-testb.src
	</entry>

	<!-- CORPUS parameters - labeled data -->
	<entry key="trainingLabeledData">
		resources/data/ner/de/deu-traintesta.conll
	</entry>
	<entry key="devLabeledData">
		resources/data/ner/de/deu-testa.conll
	</entry>
	<entry key="testLabeledData">
		resources/data/ner/de/deu-testb.conll
	</entry>

	<!-- CORPUS parameters - unlabeled data -->
	<entry key="trainingUnLabeledData">
		resources/data/ner/de/deu-train-sents.txt
	</entry>
	<entry key="devUnLabeledData">
		resources/data/ner/de/deu-testa-sents.txt
	</entry>
	<entry key="testUnLabeledData">
		resources/data/ner/de/deu-testb-sents.txt
	</entry>

	<!-- Cluster file -->
	<entry key="clusterIdSourceFileName">resources/cluster/marmot/de_marlin_cluster_1000</entry>

	<!-- Training file -->
	<!-- it is redundant, because also set in trainingLabeledData; however, 
		there as a list of training files, which is actually currently not supported 
		when calling the GNTrainer and GNTtagger -->
	<entry key="trainingFile">resources/data/ner/de/deu-traintesta.conll
	</entry>

</properties>